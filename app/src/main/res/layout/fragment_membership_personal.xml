<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".membershipPersonalFragment"
    android:id="@+id/membership_personal_display">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:padding="15dp"
        android:background="#FFFFFF"
        tools:context=".MainActivity"
        >

        <TextView
            android:layout_width="379dp"
            android:layout_height="64dp"
            android:text="회원정보입력"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/sangjin"
                />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이름"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/membership_personal_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:hint="정확한 본명을 입력해주세요."
                />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="생년월일"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/membership_personal_birth"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="yyyymmdd"
                android:textSize="20dp" />
        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="팀 초대코드"/>

        <LinearLayout
            android:layout_width="388dp"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/membership_personal_team"
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:hint="########"
                android:singleLine="true" />


            <Button
                android:id="@+id/membership_personal_teamButton"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="인증" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="신장" />

                <EditText
                    android:id="@+id/membership_personal_height"
                    android:layout_width="130dp"
                    android:layout_height="50dp"

                    android:hint="180cm"
                    android:imeOptions="actionSearch" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="몸무게" />

                <EditText
                    android:id="@+id/membership_personal_weight"
                    android:layout_width="130dp"
                    android:layout_height="50dp"

                    android:hint="65kg"
                    android:imeOptions="actionSearch" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:text="주 발" />

                <EditText
                    android:id="@+id/membership_personal_foot"
                    android:layout_width="60dp"
                    android:layout_height="50dp"

                    android:hint="왼발"
                    android:imeOptions="actionSearch" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="선호 포지션" />

                <EditText
                    android:id="@+id/membership_personal_position"
                    android:layout_width="150dp"
                    android:layout_height="50dp"

                    android:hint="ST"
                    android:imeOptions="actionSearch" />

            </LinearLayout>
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="만 14세 미만" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="만 14세 이상" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="외국인" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/membership_personal_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이용약관에 동의합니다."
            android:checked="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:id="@+id/membership_personal_finalButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="회원가입"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>