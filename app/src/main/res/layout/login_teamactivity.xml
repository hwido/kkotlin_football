<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginTeamActivity"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/login_teamactivity_propile_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="구단 프로필 편집"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_weight="3"/>

        </LinearLayout>


        <ImageView
            android:id="@+id/profileImageArea"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_image"
            android:scaleType="fitXY"
            android:src="@drawable/tot2"
            app:layout_constraintBottom_toTopOf="@+id/login_teamactivity_linearLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/login_teamactivity_guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="307dp" />

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/login_teamactivity_guideline3"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/changeProfileTakePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="사진촬영"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/changeProfileGalleryPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="프로필 사진 바꾸기"
                android:textAlignment="center"
                android:layout_margin="15dp"
                android:layout_weight="1" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/login_teamactivity_guideline3">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/login_teamactivity_nameArea"
                android:layout_marginLeft="20dp"
                android:layout_width="300dp"
                android:hint="username"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout3"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="사용자 이름"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:id="@+id/login_teamactivity_nicknameArea"
                android:layout_width="300dp"
                android:hint="nickname"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout4"
            tools:layout_editor_absoluteX="55dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="성별 대명사"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/login_teamactivity_sexArea"
                android:layout_width="300dp"
                android:layout_marginLeft="20dp"
                android:hint="M/F"
                android:layout_height="50dp"
                android:layout_weight="8"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout5"
            tools:layout_editor_absoluteX="61dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="주 구장"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/login_teamactivity_homegroundArea"
                android:layout_width="300dp"
                android:layout_marginLeft="20dp"
                android:hint="homeground"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout6"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="주종목"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/login_teamactivity_mainExerciseArea"
                android:layout_width="300dp"
                android:layout_marginLeft="20dp"
                android:hint="mainExercise"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout7"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="선호 나이대"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/login_teamactivity_ageArea"
                android:hint="age"
                android:layout_width="300dp"
                android:layout_marginLeft="20dp"
                android:layout_height="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/login_teamactivity_linearLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout8"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="추천인 코드"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"/>
            <EditText
                android:id="@+id/login_teamactivity_recommendArea"
                android:hint="recommendationcode"
                android:layout_height="50dp"
                android:layout_width="300dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>


        <Button
            android:id="@+id/goToIndividualButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="계속"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/login_teamactivity_linearLayout9"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>