<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kkotlin.football.MainPersonalInformationpage"
    android:id="@+id/main_personalInformation_display"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원정보"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/main_personalInformation_individualPicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/sangjin"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/main_personalInformation_changeProfileTakePicture_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="사진촬영"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/main_personalInformation_changeProfileGalleryPicture_individual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="프로필 사진 바꾸기"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="이름"
        android:textSize="17dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/main_personalInformation_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="생년월일"
        android:textSize="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/main_personalInformation_birth"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="휴대폰 번호"
        android:textSize="17dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/main_personalInformation_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="신장"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/main_personalInformation_height"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:imeOptions="actionSearch" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="몸무게"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/main_personalInformation_weight"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:imeOptions="actionSearch" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:text="주 발"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/main_personalInformation_foot"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:imeOptions="actionSearch" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="85dp"
                android:layout_height="match_parent"
                android:text="선호 포지션"
                android:textSize="17dp"/>

            <EditText
                android:id="@+id/main_personalInformation_position"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:imeOptions="actionSearch" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/main_personalInformation_finalButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="회원 정보 수정"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="메인"
            android:textSize="15sp"
            android:id="@+id/main_button_main"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="팀"
            android:textSize="15sp"
            android:id="@+id/main_button_team"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="개인"
            android:textSize="15sp"
            android:id="@+id/main_button_individual"
            />

        <Button
            android:layout_width="110dp"
            android:layout_height="50dp"
            android:text="개인 정보"
            android:textSize="15sp"
            android:id="@+id/main_button_setting"
            />

    </LinearLayout>


</LinearLayout>